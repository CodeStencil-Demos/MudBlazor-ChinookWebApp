@page "/invoices"
@using Microsoft.AspNetCore.Authorization
@using Application.DTOs
@attribute [Authorize]
<PageTitle>Invoice</PageTitle>

<MudContainer MaxWidth="MaxWidth.ExtraLarge" Class="mt-4">
    <MudPaper Class="pa-4">
        <MudGrid>
            <MudItem xs="6">
                <MudText Typo="Typo.h5">Invoices</MudText>
            </MudItem>
            <MudItem xs="6" Class="d-flex justify-end">
                <MudButton Variant="Variant.Filled"
                           Color="Color.Primary"
                           OnClick="async () => await HandleNewClick()"
                           StartIcon="@Icons.Material.Filled.Add">
                    New Invoice
                </MudButton>
            </MudItem>
        </MudGrid>

        <MudTextField @bind-Value="_searchTerm"
                      Label="Search"
                      Class="mt-4"
                      Immediate="true"
                      DebounceInterval="500"
                      OnDebounceIntervalElapsed="@(async () => await HandleSearch(_searchTerm))"
                      Placeholder="Search invoices..."
                      Adornment="Adornment.Start"
                      AdornmentIcon="@Icons.Material.Filled.Search" />

    <div class="table-responsive">
        <MudTable Items="@_items"
                  Dense="true"
                  Hover="true"
                  Bordered="true"
                  Striped="true"
                  Loading="@_isLoading"
                  SortLabel="Sort by"
                  T="InvoiceDto"
                  ServerData="@(new Func<TableState, CancellationToken, Task<TableData<InvoiceDto>>>(Reload))"
                  OnRowClick="HandleRowClick"
                  RowStyleFunc="@((item, i) => "cursor-pointer")"
                  @ref="_tableRef">

            <HeaderContent>
                <MudTh>
                <MudTableSortLabel SortLabel="CustomerId" T="InvoiceDto">
                    Customer 
                </MudTableSortLabel>
                </MudTh>
                <MudTh>
                <MudTableSortLabel SortLabel="InvoiceDate" T="InvoiceDto">
                    Invoice Date
                </MudTableSortLabel>
                </MudTh>
                <MudTh>
                <MudTableSortLabel SortLabel="BillingAddress" T="InvoiceDto">
                    Billing Address
                </MudTableSortLabel>
                </MudTh>
                <MudTh>
                <MudTableSortLabel SortLabel="BillingCity" T="InvoiceDto">
                    Billing City
                </MudTableSortLabel>
                </MudTh>
                <MudTh>
                <MudTableSortLabel SortLabel="BillingState" T="InvoiceDto">
                    Billing State
                </MudTableSortLabel>
                </MudTh>
                <MudTh>
                <MudTableSortLabel SortLabel="BillingCountry" T="InvoiceDto">
                    Billing Country
                </MudTableSortLabel>
                </MudTh>
                <MudTh>
                <MudTableSortLabel SortLabel="BillingPostalCode" T="InvoiceDto">
                    Billing Postal Code
                </MudTableSortLabel>
                </MudTh>
                <MudTh>
                <MudTableSortLabel SortLabel="Total" T="InvoiceDto">
                    Total
                </MudTableSortLabel>
                </MudTh>
                <MudTh>Actions</MudTh>
            </HeaderContent>

            <RowTemplate>
                <MudTd DataLabel="Customer ">@(_customers.FirstOrDefault(c => c.CustomerId == context.CustomerId)?.FirstName ?? string.Empty)</MudTd>
                <MudTd DataLabel="Invoice Date">@context.InvoiceDate</MudTd>
                <MudTd DataLabel="Billing Address">@context.BillingAddress</MudTd>
                <MudTd DataLabel="Billing City">@context.BillingCity</MudTd>
                <MudTd DataLabel="Billing State">@context.BillingState</MudTd>
                <MudTd DataLabel="Billing Country">@context.BillingCountry</MudTd>
                <MudTd DataLabel="Billing Postal Code">@context.BillingPostalCode</MudTd>
                <MudTd DataLabel="Total">@context.Total</MudTd>

                <MudTd>
                    <MudStack Row="true">
                        <MudIconButton Icon="@Icons.Material.Filled.Edit"
                                       Color="Color.Primary"
                                       Size="Size.Small"
                                       OnClick="@(() => HandleEditClick(context))" />
                        <MudIconButton Icon="@Icons.Material.Filled.Delete"
                                       Color="Color.Error"
                                       Size="Size.Small"
                                       OnClick="@(() => HandleDeleteClick(context))" />
                    </MudStack>
                </MudTd>
            </RowTemplate>
            <PagerContent>
                <MudTablePager />
            </PagerContent>
            <NoRecordsContent>
                <MudText>No invoices found</MudText>
            </NoRecordsContent>
            <LoadingContent>
                <MudText>Loading...</MudText>
            </LoadingContent>
        </MudTable>
    </div>
    </MudPaper>
</MudContainer>

@code {
    private IEnumerable<InvoiceDto>? _items;
    private string _searchTerm = "";
    private bool _isLoading;
    private MudTable<InvoiceDto> _tableRef = null!;
    private List<CustomerDto> _customers = [];
            
    protected override async Task OnInitializedAsync()
    {
        try
        {
            await LoadCustomers();
        }
        catch (Exception ex)
        {
            Snackbar.Add($"Failed to initialize: {ex.Message}", Severity.Error);
        }
    }

            
    private async Task LoadCustomers()
    {
        _customers = (await CustomerService.GetAllAsync()).ToList();
    }



    private async Task<TableData<InvoiceDto>> Reload(TableState state, CancellationToken cancellationToken)
    {
        return await TableHelpers.ServerReload<InvoiceDto>(
            state,
            cancellationToken,
            _searchTerm,
            parameters => InvoiceService.GetPagedAsync(parameters),
            "Failed to load invoices",
            Snackbar,
            isLoading => _isLoading = isLoading);
    }
    
    //Click
    private void HandleRowClick(TableRowClickEventArgs<InvoiceDto> args)
    {
        if (args.Item == null) return;
        _ = HandleEditClick(args.Item);
    }

    //Search
    private async Task HandleSearch(string? value)
    {
        _searchTerm = value ?? "";
        await _tableRef.ReloadServerData();
    }

    //Delete
    private async Task HandleDeleteClick(InvoiceDto invoice)
    {
        var options = new DialogOptions() { CloseButton = true, MaxWidth = MaxWidth.ExtraSmall };
        var result = await DialogService.ShowMessageBox(
            "Delete Invoice",
            $"Are you sure you want to delete '{invoice.InvoiceId}'?",
            yesText: "Delete",
            cancelText: "Cancel",
            options: options);

        if (result ?? false)
        {
            try
            {
                await InvoiceService.DeleteAsync(invoice.InvoiceId);
                await _tableRef.ReloadServerData();
                Snackbar.Add("Invoice deleted successfully", Severity.Success);
            }
            catch (Exception ex)
            {
                Snackbar.Add($"Failed to delete invoice: {ex.Message}", Severity.Error);
            }
        }
    }

    //New
    private async Task HandleNewClick()
    {
        var parameters = new DialogParameters
        {
            { "IsEditing", false },
            { "Invoice", null },
            { "Customers", _customers }


            //{ "Invoice", null}  ,
            //{ "Customers",_customers}  
        };


        var options = new DialogOptions()
            {
                MaxWidth = MaxWidth.Small,
                FullWidth = true,
                CloseButton = true,
            };

        var dialogRes = await (await DialogService.ShowAsync<InvoiceDialog>("New Invoice", parameters, options)).Result;

        if (!dialogRes.Canceled)
        {
            try
            {
                if (dialogRes.Data is InvoiceDto invoiceToSave) 
                    await InvoiceService.CreateAsync(invoiceToSave);
                await _tableRef.ReloadServerData();
                Snackbar.Add("Invoice created successfully", Severity.Success);
            }
            catch (Exception ex)
            {
                Snackbar.Add($"Failed to create invoice: {ex.Message}", Severity.Error);
            }
        }
    }

    //Edit
    private async Task HandleEditClick(InvoiceDto invoice)
    {
        var parameters = new DialogParameters
        {
            { "IsEditing", true },
            { "Invoice", invoice },
            { "Customers", _customers }


            //{ "Invoice", invoice} ,
            //{ "Customers",_customers}  
        };

        var options = new DialogOptions { MaxWidth = MaxWidth.Small, FullWidth = true, CloseButton = true };
        var dialog = await DialogService.ShowAsync<InvoiceDialog>("Edit Invoice", parameters, options);
        var result = await dialog.Result;

        if (!result.Canceled)
        {
            try
            {
                if (result.Data is InvoiceDto invoiceToSave) 
                    await InvoiceService.UpdateAsync(invoiceToSave);
                await _tableRef.ReloadServerData();
                Snackbar.Add("Invoice updated successfully", Severity.Success);
            }
            catch (Exception ex)
            {
                Snackbar.Add($"Failed to update Invoice: {ex.Message}", Severity.Error);
            }
        }
    }
}
