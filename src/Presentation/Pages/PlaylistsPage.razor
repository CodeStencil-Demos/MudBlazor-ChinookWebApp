@page "/playlists"
@using Microsoft.AspNetCore.Authorization
@using Application.DTOs
@attribute [Authorize]
<PageTitle>Playlist</PageTitle>

<MudContainer MaxWidth="MaxWidth.ExtraLarge" Class="mt-4">
    <MudPaper Class="pa-4">
        <MudGrid>
            <MudItem xs="6">
                <MudText Typo="Typo.h5">Playlists</MudText>
            </MudItem>
            <MudItem xs="6" Class="d-flex justify-end">
                <MudButton Variant="Variant.Filled"
                           Color="Color.Primary"
                           OnClick="async () => await HandleNewClick()"
                           StartIcon="@Icons.Material.Filled.Add">
                    New Playlist
                </MudButton>
            </MudItem>
        </MudGrid>

        <MudTextField @bind-Value="_searchTerm"
                      Label="Search"
                      Class="mt-4"
                      Immediate="true"
                      DebounceInterval="500"
                      OnDebounceIntervalElapsed="@(async () => await HandleSearch(_searchTerm))"
                      Placeholder="Search playlists..."
                      Adornment="Adornment.Start"
                      AdornmentIcon="@Icons.Material.Filled.Search" />

    <div class="table-responsive">
        <MudTable Items="@_items"
                  Dense="true"
                  Hover="true"
                  Bordered="true"
                  Striped="true"
                  Loading="@_isLoading"
                  SortLabel="Sort by"
                  T="PlaylistDto"
                  ServerData="@(new Func<TableState, CancellationToken, Task<TableData<PlaylistDto>>>(Reload))"
                  OnRowClick="HandleRowClick"
                  RowStyleFunc="@((item, i) => "cursor-pointer")"
                  @ref="_tableRef">

            <HeaderContent>
                <MudTh>
                <MudTableSortLabel SortLabel="Name" T="PlaylistDto">
                    Name
                </MudTableSortLabel>
                </MudTh>
                <MudTh>Actions</MudTh>
            </HeaderContent>

            <RowTemplate>
                <MudTd DataLabel="Name">@context.Name</MudTd>

                <MudTd>
                    <MudStack Row="true">
                        <MudIconButton Icon="@Icons.Material.Filled.Edit"
                                       Color="Color.Primary"
                                       Size="Size.Small"
                                       OnClick="@(() => HandleEditClick(context))" />
                        <MudIconButton Icon="@Icons.Material.Filled.Delete"
                                       Color="Color.Error"
                                       Size="Size.Small"
                                       OnClick="@(() => HandleDeleteClick(context))" />
                    </MudStack>
                </MudTd>
            </RowTemplate>
            <PagerContent>
                <MudTablePager />
            </PagerContent>
            <NoRecordsContent>
                <MudText>No playlists found</MudText>
            </NoRecordsContent>
            <LoadingContent>
                <MudText>Loading...</MudText>
            </LoadingContent>
        </MudTable>
    </div>
    </MudPaper>
</MudContainer>

@code {
    private IEnumerable<PlaylistDto>? _items;
    private string _searchTerm = "";
    private bool _isLoading;
    private MudTable<PlaylistDto> _tableRef = null!;

            
    protected override async Task OnInitializedAsync()
    {
        try
        {
        }
        catch (Exception ex)
        {
            Snackbar.Add($"Failed to initialize: {ex.Message}", Severity.Error);
        }
    }



    private async Task<TableData<PlaylistDto>> Reload(TableState state, CancellationToken cancellationToken)
    {
        return await TableHelpers.ServerReload<PlaylistDto>(
            state,
            cancellationToken,
            _searchTerm,
            parameters => PlaylistService.GetPagedAsync(parameters),
            "Failed to load playlists",
            Snackbar,
            isLoading => _isLoading = isLoading);
    }
    
    //Click
    private void HandleRowClick(TableRowClickEventArgs<PlaylistDto> args)
    {
        if (args.Item == null) return;
        _ = HandleEditClick(args.Item);
    }

    //Search
    private async Task HandleSearch(string? value)
    {
        _searchTerm = value ?? "";
        await _tableRef.ReloadServerData();
    }

    //Delete
    private async Task HandleDeleteClick(PlaylistDto playlist)
    {
        var options = new DialogOptions() { CloseButton = true, MaxWidth = MaxWidth.ExtraSmall };
        var result = await DialogService.ShowMessageBox(
            "Delete Playlist",
            $"Are you sure you want to delete '{playlist.PlaylistId}'?",
            yesText: "Delete",
            cancelText: "Cancel",
            options: options);

        if (result ?? false)
        {
            try
            {
                await PlaylistService.DeleteAsync(playlist.PlaylistId);
                await _tableRef.ReloadServerData();
                Snackbar.Add("Playlist deleted successfully", Severity.Success);
            }
            catch (Exception ex)
            {
                Snackbar.Add($"Failed to delete playlist: {ex.Message}", Severity.Error);
            }
        }
    }

    //New
    private async Task HandleNewClick()
    {
        var parameters = new DialogParameters
        {
            { "IsEditing", false },
            { "Playlist", null }


            //{ "Playlist", null}   

        };


        var options = new DialogOptions()
            {
                MaxWidth = MaxWidth.Small,
                FullWidth = true,
                CloseButton = true,
            };

        var dialogRes = await (await DialogService.ShowAsync<PlaylistDialog>("New Playlist", parameters, options)).Result;

        if (!dialogRes.Canceled)
        {
            try
            {
                if (dialogRes.Data is PlaylistDto playlistToSave) 
                    await PlaylistService.CreateAsync(playlistToSave);
                await _tableRef.ReloadServerData();
                Snackbar.Add("Playlist created successfully", Severity.Success);
            }
            catch (Exception ex)
            {
                Snackbar.Add($"Failed to create playlist: {ex.Message}", Severity.Error);
            }
        }
    }

    //Edit
    private async Task HandleEditClick(PlaylistDto playlist)
    {
        var parameters = new DialogParameters
        {
            { "IsEditing", true },
            { "Playlist", playlist }


            //{ "Playlist", playlist}  

        };

        var options = new DialogOptions { MaxWidth = MaxWidth.Small, FullWidth = true, CloseButton = true };
        var dialog = await DialogService.ShowAsync<PlaylistDialog>("Edit Playlist", parameters, options);
        var result = await dialog.Result;

        if (!result.Canceled)
        {
            try
            {
                if (result.Data is PlaylistDto playlistToSave) 
                    await PlaylistService.UpdateAsync(playlistToSave);
                await _tableRef.ReloadServerData();
                Snackbar.Add("Playlist updated successfully", Severity.Success);
            }
            catch (Exception ex)
            {
                Snackbar.Add($"Failed to update Playlist: {ex.Message}", Severity.Error);
            }
        }
    }
}
